<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>New Event Booking</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body style="margin:0; background:#f9fafb; font-family:Arial,Helvetica,sans-serif;">

  <!-- Header -->
  <table role="presentation" width="100%">
    <tr>
      <td style="background:#b71c1c; padding:16px 24px; text-align:center; color:#fff; font-weight:bold; font-size:18px;">
        {{appName}}
      </td>
    </tr>
  </table>

  <!-- Body -->
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:24px;">
        <table role="presentation" width="600" style="background:#fff; border-radius:14px; border:1px solid #e5e7eb;">

          <tr>
            <td style="padding:24px;">
              <h1 style="font-size:20px; margin:0;">New Event Booking</h1>
              <p style="margin:8px 0;">A new attendee just booked an event.</p>
            </td>
          </tr>

          <tr>
            <td style="padding:20px 24px;">
              <h2 style="color:#b71c1c; margin:0 0 12px;">{{eventName}}</h2>
              <ul style="list-style:none; padding:0; margin:0; font-size:14px; line-height:1.6;">
                <li><strong>Booking ID:</strong> #{{eventBookingId}}</li>
                <li><strong>Date:</strong> {{eventDateText}}</li>
                <li><strong>Time:</strong> {{eventTimeText}}</li>
                <li><strong>Venue:</strong> {{venue}}</li>
                <li><strong>Attendee:</strong> {{userName}} ({{userEmail}}) / {{userPhone}}</li>
                <li><strong>Tickets:</strong> {{ticketsText}}</li>
                <li><strong>Amount:</strong> {{priceText}}</li>
              </ul>
            </td>
          </tr>

        </table>
        <div style="margin-top:16px; font-size:12px; color:#6b7280;">Booking ID: #{{eventBookingId}}</div>
      </td>
    </tr>
  </table>

</body>
</html>

<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  {{!-- {{> head }} --}}
</head>
<body style="background:hsl(210, 20%, 98%); font-family:Arial,Helvetica,sans-serif;">
  {{!-- {{> header }} --}}
  <table role="presentation" width="100%"><tr><td align="center" class="px" style="padding:24px;">
    <table role="presentation" width="600" class="container">
      <tr><td>
        <table role="presentation" width="100%" class="card">
          <tr><td style="padding:24px 24px 8px 24px;">
            <h1 class="h1">New attendee registered</h1>
            <p class="p">Please welcome your new attendee.</p>
          </td></tr>
          <tr><td class="divider"></td></tr>
          <tr><td style="padding:16px 24px;">
            <h2 class="h2 brand-txt">{{eventName}}</h2>
            <ul style="padding:0 0 0 18px; margin:8px 0;">
              <li class="li"><strong>Date:</strong> {{eventDateText}}</li>
              {{#if eventTimeText}}<li class="li"><strong>Time:</strong> {{eventTimeText}}</li>{{/if}}
              <li class="li"><strong>Venue:</strong> {{venue}}</li>
              <li class="li"><strong>Attendee:</strong> {{userName}} ({{userEmail}} {{#if userPhone}}/ {{userPhone}}{{/if}})</li>
              {{#if ticketsText}}<li class="li"><strong>Tickets:</strong> {{ticketsText}}</li>{{/if}}
            </ul>
          </td></tr>
        </table>
      </td></tr>
    </table>
  </td></tr></table>
  {{!-- {{> footer }} --}}
</body>
</html>

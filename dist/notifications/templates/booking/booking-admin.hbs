<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  {{!-- {{> head }} --}}
</head>
<body style="background:#f9fafb; font-family:Arial,Helvetica,sans-serif;">
  {{!-- {{> header }} --}}
  <table role="presentation" width="100%"><tr><td align="center" class="px" style="padding:24px;">
    <table role="presentation" width="600" class="container">
      <tr><td>
        <table role="presentation" width="100%" class="card">
          <tr><td style="padding:24px 24px 8px 24px;">
            <h1 class="h1">New booking received</h1>
            <p class="p">A new booking has been placed.</p>
          </td></tr>
          <tr><td class="divider"></td></tr>
          <tr><td style="padding:16px 24px;">
            <h2 class="h2 brand-txt">{{poojaName}}</h2>
            <ul style="padding:0 0 0 18px; margin:8px 0;">
              <li class="li"><strong>ID:</strong> #{{bookingId}}</li>
              <li class="li"><strong>Date:</strong> {{bookingDateText}}</li>
              <li class="li"><strong>Time:</strong> {{startTimeText}} â€“ {{endTimeText}}</li>
              {{#if priestName}}<li class="li"><strong>Priest:</strong> {{priestName}}</li>{{/if}}
              <li class="li"><strong>User:</strong> {{userName}} {{#if userEmail}}({{userEmail}}){{/if}} {{#if userPhone}}/ {{userPhone}}{{/if}}</li>
              {{#if venueText}}<li class="li"><strong>Venue:</strong> {{venueText}}</li>{{/if}}
              <li class="li"><strong>Status:</strong> {{status}}</li>
            </ul>
          </td></tr>
          {{#if adminUrl}}
            <tr><td style="padding:8px 24px 24px 24px;">
              {{!-- {{> button href=adminUrl label="Open in Admin" }} --}}

            </td></tr>
          {{/if}}
        </table>
      </td></tr>
    </table>
  </td></tr></table>
  {{!-- {{> footer }} --}}

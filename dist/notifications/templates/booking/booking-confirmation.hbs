<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Booking Confirmation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    /* Client resets */
    body,table,td,a{ -webkit-text-size-adjust:100%; -ms-text-size-adjust:100% }
    table,td{ mso-table-lspace:0pt; mso-table-rspace:0pt }
    img{ -ms-interpolation-mode:bicubic; border:0; outline:none; text-decoration:none }
    table{ border-collapse:collapse !important }
    body{ margin:0 !important; padding:0 !important; width:100% !important; background:#f9fafb; }
    /* Responsive */
    @media screen and (max-width:600px){
      .container{ width:100% !important }
      .px{ padding-left:16px !important; padding-right:16px !important }
      .stack{ display:block !important; width:100% !important }
    }
    /* Theme */
    .brand{ color:#0ea5e9 }
    .btn{ background:#0ea5e9; color:#fff !important; text-decoration:none; padding:12px 18px; border-radius:6px; display:inline-block }
    .card{ background:#fff; border:1px solid #e5e7eb; border-radius:12px }
    .muted{ color:#6b7280 }
    .h1{ font-size:20px; line-height:1.4; margin:0 0 8px 0; color:#111827 }
    .h2{ font-size:18px; line-height:1.5; margin:0 0 6px 0; color:#111827 }
    .p{ font-size:14px; line-height:1.7; margin:0 0 10px 0; color:#374151 }
    .li{ font-size:14px; line-height:1.7; color:#374151 }
    .divider{ height:1px; background:#e5e7eb }
  </style>
</head>
<body style="font-family:Arial,Helvetica,sans-serif;">
  <!-- Header -->
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td style="background:#0ea5e9; padding:16px 24px; text-align:center;">
        <a href="{{appUrl}}" style="text-decoration:none; color:#ffffff;">
          <span style="font-weight:700; font-size:18px; letter-spacing:.2px;">{{appName}}</span>
        </a>
      </td>
    </tr>
  </table>

  <!-- Body -->
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center" class="px" style="padding:24px;">
        <table role="presentation" width="600" class="container">
          <tr><td>
            <table role="presentation" width="100%" class="card">
              <tr>
                <td style="padding:24px 24px 8px 24px;">
                  <h1 class="h1">Thank you, {{userName}}!</h1>
                  <p class="p">Your booking is confirmed.</p>
                </td>
              </tr>
              <tr><td class="divider"></td></tr>

              <tr><td style="padding:16px 24px;">
                <h2 class="h2 brand">{{poojaName}}</h2>
                <ul style="padding:0 0 0 18px; margin:8px 0;">
                  <li class="li"><strong>Date:</strong> {{bookingDateText}}</li>
                  <li class="li"><strong>Time:</strong> {{startTimeText}} – {{endTimeText}}</li>
                  {{#if venueText}}
                    <li class="li"><strong>Venue:</strong> {{venueText}}</li>
                  {{/if}}
                  <li class="li"><strong>Status:</strong> {{status}}</li>
                </ul>
              </td></tr>

              {{#if manageUrl}}
              <tr>
                <td style="padding:8px 24px 24px 24px;">
                  <a href="{{manageUrl}}" class="btn">View / Manage Booking</a>
                </td>
              </tr>
              {{/if}}
            </table>
            <div style="height:16px;"></div>
            <div class="muted" style="font-size:12px;">Booking ID: #{{bookingId}}</div>
          </td></tr>
        </table>
      </td>
    </tr>
  </table>

  <!-- Footer -->
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td style="padding:16px 24px; text-align:center;" class="muted">
        <div style="font-size:12px; line-height:1.6;">
          © {{year}} {{appName}} · <a href="{{appUrl}}" style="color:#6b7280; text-decoration:underline;">{{appUrl}}</a><br/>
          This is a transactional email related to your activity.
        </div>
      </td>
    </tr>
  </table>
</body>
</html>

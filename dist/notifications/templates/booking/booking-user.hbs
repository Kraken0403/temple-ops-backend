<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  {{!-- {{> head }} --}}
</head>
<body style="background:#f9fafb; font-family:Arial,Helvetica,sans-serif;">
  {{!-- {{> header }} --}}
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center" class="px" style="padding:24px;">
        <table role="presentation" width="600" class="container">
          <tr><td>
            <table role="presentation" width="100%" class="card">
              <tr>
                <td style="padding:24px 24px 8px 24px;">
                  <h1 class="h1">Thank you, {{userName}}!</h1>
                  <p class="p">Your booking is confirmed.</p>
                </td>
              </tr>
              <tr><td class="divider"></td></tr>

              <tr><td style="padding:16px 24px;">
                <h2 class="h2 brand-txt">{{poojaName}}</h2>
                <ul style="padding:0 0 0 18px; margin:8px 0;">
                  <li class="li"><strong>Date:</strong> {{bookingDateText}}</li>
                  <li class="li"><strong>Time:</strong> {{startTimeText}} â€“ {{endTimeText}}</li>
                  {{#if venueText}}
                    <li class="li"><strong>Venue:</strong> {{venueText}}</li>
                  {{/if}}
                  <li class="li"><strong>Status:</strong> {{status}}</li>
                  {{#if priestName}}
                    <li class="li"><strong>Priest:</strong> {{priestName}}</li>
                  {{/if}}
                </ul>
              </td></tr>

              {{#if manageUrl}}
                <tr>
                  <td style="padding:8px 24px 24px 24px;">
                    {{!-- {{> button href=manageUrl label="View / Manage Booking" }} --}}
                  </td>
                </tr>
              {{/if}}
            </table>
            <div style="height:16px;"></div>
            <div class="muted" style="font-size:12px;">Booking ID: #{{bookingId}}</div>
          </td></tr>
        </table>
      </td>
    </tr>
  </table>
  {{!-- {{> footer }} --}}
</body>
</html>

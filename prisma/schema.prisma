datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum NewsletterSource {
  FOOTER
  BOOKING
  EVENT
  OTHER
}

enum PaymentPurpose {
  EVENT
  SERVICES
  DONATION
  SPONSORSHIP
}

enum PaymentProvider {
  PAYPAL
}

enum PaymentStatus {
  PENDING
  CREATED
  APPROVED
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

model Payment {
  id Int @id @default(autoincrement())

  purpose     String
  referenceId Int

  amount   Float
  currency String
  provider String @default("PAYPAL")

  providerOrderId String?
  providerTxnId   String?

  status PaymentStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // üëá REQUIRED inverse field (NO FK HERE)
  eventBooking EventBooking? @relation("EventBookingPayment")

  @@index([purpose, referenceId])
  @@map("payment")
}

enum SubscriberStatus {
  ACTIVE
  UNSUBSCRIBED
}

model NewsletterSubscriber {
  id     Int              @id @default(autoincrement())
  email  String           @unique
  source NewsletterSource
  status SubscriberStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("newslettersubscriber")
}

enum CouponType {
  PERCENT
  FIXED
}

model Coupon {
  id          Int     @id @default(autoincrement())
  code        String  @unique
  description String? @db.VarChar(500)

  type           CouponType
  value          Float
  maxDiscount    Float?
  minOrderAmount Float?

  startsAt  DateTime?
  endsAt    DateTime?
  isActive  Boolean   @default(true)
  stackable Boolean   @default(false)

  usageLimit        Int?
  usageLimitPerUser Int?

  // Scoping ‚Äì if none linked, coupon is global
  events    CouponEvent[]         @relation("CouponToEvent")
  poojas    CouponPooja[]         @relation("CouponToPooja")
  poojaCats CouponPoojaCategory[] @relation("CouponToPoojaCategory")

  // Redemptions
  redemptions CouponRedemption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("coupon")
}

model CouponEvent {
  // back to Coupon (name MUST match Coupon.events relation)
  coupon   Coupon @relation("CouponToEvent", fields: [couponId], references: [id], onDelete: Cascade)
  couponId Int

  // back to Event (name MUST match Event.couponScopes relation)
  event   Event @relation("EventToCoupon", fields: [eventId], references: [id], onDelete: Cascade)
  eventId Int

  @@id([couponId, eventId])
  @@index([eventId])
  @@map("couponevent")
}

model CouponPooja {
  coupon   Coupon @relation("CouponToPooja", fields: [couponId], references: [id], onDelete: Cascade)
  couponId Int

  pooja   Pooja @relation("PoojaToCoupon", fields: [poojaId], references: [id], onDelete: Cascade)
  poojaId Int

  @@id([couponId, poojaId])
  @@index([poojaId])
  @@map("couponpooja")
}

model CouponPoojaCategory {
  coupon   Coupon @relation("CouponToPoojaCategory", fields: [couponId], references: [id], onDelete: Cascade)
  couponId Int

  poojaCategory   PoojaCategory @relation("PoojaCategoryToCoupon", fields: [poojaCategoryId], references: [id], onDelete: Cascade)
  poojaCategoryId Int

  @@id([couponId, poojaCategoryId])
  @@index([poojaCategoryId])
  @@map("couponpoojacategory")
}

enum RedemptionTargetType {
  EVENT_BOOKING
  POOJA_BOOKING
}

model CouponRedemption {
  id       Int    @id @default(autoincrement())
  coupon   Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)
  couponId Int

  user   User? @relation("UserCouponRedemptions", fields: [userId], references: [id])
  userId Int?

  targetType     RedemptionTargetType
  eventBooking   EventBooking?        @relation("EventBookingCouponRedemptions", fields: [eventBookingId], references: [id], onDelete: SetNull)
  eventBookingId Int?
  poojaBooking   Booking?             @relation("PoojaBookingCouponRedemptions", fields: [poojaBookingId], references: [id], onDelete: SetNull)
  poojaBookingId Int?

  amountApplied Float
  createdAt     DateTime @default(now())

  @@unique([couponId, eventBookingId])
  @@unique([couponId, poojaBookingId])
  @@index([userId])
  @@map("couponredemption")
}

model MediaAsset {
  id         Int      @id @default(autoincrement())
  url        String   @unique
  filename   String
  mimeType   String?
  sizeBytes  Int?
  width      Int?
  height     Int?
  uploadedBy Int?
  createdAt  DateTime @default(now())

  // Album relations
  albumItems     AlbumItem[]
  coverForAlbums Album[]     @relation("AlbumCover")

  // Featured image back-relations
  featuredForPoojas   Pooja[]              @relation("PoojaFeaturedMedia")
  featuredForPriests  Priest[]             @relation("PriestFeaturedMedia")
  featuredForEvents   Event[]              @relation("EventFeaturedMedia")
  featuredForSponsors SponsorshipBooking[] @relation("SponsorshipLogoMedia")

  // Gallery back-relations
  poojaGalleryItems PoojaMedia[] @relation("PoojaGalleryMedia")
  eventGalleryItems EventMedia[] @relation("EventGalleryMedia")

  @@map("mediaasset")
}

model Album {
  id          Int     @id @default(autoincrement())
  title       String
  slug        String  @unique
  description String? @db.VarChar(1000)

  coverId Int?
  cover   MediaAsset? @relation("AlbumCover", fields: [coverId], references: [id], onDelete: SetNull)

  isPublic  Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  items     AlbumItem[]

  @@map("album")
}

model AlbumItem {
  id        Int        @id @default(autoincrement())
  album     Album      @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   Int
  media     MediaAsset @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  mediaId   Int
  caption   String?    @db.VarChar(1000)
  sortOrder Int        @default(0)

  @@index([albumId])
  @@index([mediaId])
  @@map("albumitem")
}

model Priest {
  id             Int     @id @default(autoincrement())
  name           String
  specialty      String?
  contactNo      String?
  email          String?
  languages      Json
  address        String?
  qualifications Json

  slots    AvailabilitySlot[]
  bookings Booking[]
  poojas   Pooja[]            @relation("PoojaPriests")

  // optional user reference
  user User?

  // ‚úÖ Featured image (one-to-one optional) ‚Äî unified approach
  featuredMediaId Int?
  featuredMedia   MediaAsset? @relation("PriestFeaturedMedia", fields: [featuredMediaId], references: [id])

  @@map("priest")
}

model Pooja {
  id            Int    @id @default(autoincrement())
  name          String
  amount        Float
  outsideAmount Float?

  date DateTime?
  time DateTime?

  durationMin Int
  prepTimeMin Int
  bufferMin   Int

  isInVenue      Boolean
  isOutsideVenue Boolean

  /// NEW: link to a saved Venue when isInVenue = true
  venueId Int?
  venue   Venue? @relation("VenuePoojas", fields: [venueId], references: [id], onDelete: SetNull)

  venueAddress String?
  mapLink      String?
  allowedZones Json?

  featuredMediaId Int?
  featuredMedia   MediaAsset? @relation("PoojaFeaturedMedia", fields: [featuredMediaId], references: [id])

  // Gallery (many images)
  gallery PoojaMedia[]

  includeFood Boolean @default(false)
  includeHall Boolean @default(false)
  materials   String? @db.VarChar(1000)
  notes       String? @db.VarChar(1000)
  description String? @db.Text

  // many-to-many to Priest
  priests  Priest[]  @relation("PoojaPriests")
  bookings Booking[]

  couponScopes CouponPooja[] @relation("PoojaToCoupon")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  categories PoojaCategory[] @relation("PoojaCategories")

  @@map("pooja")
}

enum SlotType {
  AVAILABLE
  BUSY
  HOLIDAY
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  completed
}

model AvailabilitySlot {
  id       Int    @id @default(autoincrement())
  priest   Priest @relation(fields: [priestId], references: [id])
  priestId Int

  /// For one-off slots (a specific calendar date)
  date DateTime?

  /// Time-of-day range (HH:MM:SS) for both one-offs and recurrings
  start DateTime @db.Time
  end   DateTime @db.Time

  /// If you‚Äôre doing a weekly recurring slot, list weekdays here
  daysOfWeek Json? @db.Json

  disabled Boolean  @default(false)
  type     SlotType @default(AVAILABLE)

  @@index([priestId])
  @@map("availabilityslot")
}

model Permission {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  description     String?
  rolePermissions RolePermission[]

  @@map("permission")
}

model RolePermission {
  role         Role       @relation(fields: [roleId], references: [id])
  roleId       Int
  permission   Permission @relation(fields: [permissionId], references: [id])
  permissionId Int

  @@id([roleId, permissionId])
  @@map("rolepermission")
}

enum BookingVenueType {
  TEMPLE
  CUSTOM
}

model Booking {
  id Int @id @default(autoincrement())

  userId Int?
  user   User? @relation(fields: [userId], references: [id])
  venueType     BookingVenueType
  
  poojaId  Int
  priestId Int
  pooja    Pooja  @relation(fields: [poojaId], references: [id])
  priest   Priest @relation(fields: [priestId], references: [id])

  bookingDate DateTime
  start       DateTime
  end         DateTime

  status String @default("pending")

  amountAtBooking     Float
  poojaNameAtBooking  String
  priestNameAtBooking String?

  userName     String?
  userEmail    String?
  userPhone    String?
  venueAddress String?
  venueState   String?
  venueZip     String?

  venueLat Float?
  venueLng Float?

  // travel snapshot
  travelDistance    Float?
  travelCost        Float?
  travelRate        Float?
  travelUnit        String? // "mile" | "km"
  freeTravelUnits   Float?
  travelDurationMin Int?
  travelAvgSpeed    Float?

  discountAmount Float?  @default(0)
  couponCode     String? @db.VarChar(64)
  subtotal       Float?
  total          Float?

  createdAt DateTime @default(now())

  couponRedemptions CouponRedemption[] @relation("PoojaBookingCouponRedemptions")

  @@index([priestId])
  @@index([bookingDate])
  @@map("booking")
}

model StaticPage {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("staticpage")
}

enum DonationStatus {
  PENDING
  COMPLETED
  FAILED
}

model DonationItem {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  donations DonationRecord[]

  @@map("donationitem")
}

model DonationRecord {
  id             Int          @id @default(autoincrement())
  donationItem   DonationItem @relation(fields: [donationItemId], references: [id])
  donationItemId Int

  donorName  String
  donorEmail String
  donorPhone String

  // üîπ Snapshot fields
  itemNameAtDonation String
  amountAtDonation   Float

  status          DonationStatus  @default(PENDING)

  createdAt DateTime @default(now())

  @@map("donationrecord")
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  roles    UserRole[]

  // link a User to a Priest account (optional)
  priest   Priest? @relation(fields: [priestId], references: [id])
  priestId Int?    @unique

  // bookings made by this user
  eventBookings       EventBooking[]
  sponsorshipBookings SponsorshipBooking[]
  poojaBookings       Booking[]

  couponRedemptions CouponRedemption[] @relation("UserCouponRedemptions")

  @@map("user")
}

model Role {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  users           UserRole[]
  rolePermissions RolePermission[]

  @@map("role")
}

model UserRole {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
  @@map("userrole")
}

enum EventRecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
  CUSTOM
}

model Event {
  id          Int     @id @default(autoincrement())
  name        String
  description String? @db.VarChar(1000)

  // Outside venue (legacy fields kept as-is)
  venue   String? // outside-venue address/name
  mapLink String? // outside-venue map link

  venueId  Int? // NEW
  venueRel Venue? @relation("VenueEvents", fields: [venueId], references: [id], onDelete: SetNull) // NEW

  // Flags (mirror Pooja)
  isInVenue      Boolean @default(false) // NEW
  isOutsideVenue Boolean @default(true) // NEW

  recurrenceType EventRecurrenceType @default(NONE)

  recurrenceDays Json?

  date      DateTime
  endDate   DateTime?
  startTime DateTime?
  endTime   DateTime?
  tags      Json?
  capacity  Int?
  price     Float?

  organizer   String?
  contactInfo String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sponsorships EventSponsorship[]

  occurrences EventOccurrence[]

  featuredMediaId Int?
  featuredMedia   MediaAsset? @relation("EventFeaturedMedia", fields: [featuredMediaId], references: [id])

  // Gallery
  gallery EventMedia[]

  couponScopes CouponEvent[] @relation("EventToCoupon")

  @@map("event")
}

model EventBooking {
  id Int @id @default(autoincrement())

  // üîó Booking is ALWAYS tied to a specific occurrence
  eventOccurrenceId Int
  eventOccurrence   EventOccurrence @relation(fields: [eventOccurrenceId], references: [id], onDelete: Cascade)

  // Optional logged-in user
  userId Int?
  user   User? @relation(fields: [userId], references: [id])

  pax Int @default(1)

  status String @default("PENDING") // PENDING | CONFIRMED | CANCELLED

  bookedAt DateTime @default(now())

  // üì∏ SNAPSHOT (mandatory for history safety)
  eventNameAtBooking String
  eventDateAtBooking DateTime

  // Guest details
  userName  String?
  userEmail String?
  userPhone String?

  // üí∞ Pricing snapshot
  subtotal       Float?
  discountAmount Float?  @default(0)
  couponCode     String? @db.VarChar(64)
  total          Float?

  // ‚úÖ FIX IS HERE
  paymentId Int?     @unique
  payment   Payment? @relation("EventBookingPayment", fields: [paymentId], references: [id])

  // Coupon redemptions
  couponRedemptions CouponRedemption[] @relation("EventBookingCouponRedemptions")

  @@index([eventOccurrenceId])
  @@index([userId])
  @@map("eventbooking")
}

model SponsorshipType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  price       Float

  // üÜï availability is on the TYPE
  startsAt DateTime?
  endsAt   DateTime?
  isActive Boolean   @default(true)

  // üÜï default slots for ‚Äúindependent‚Äù usage (eventId = null)
  defaultMaxSlots Int? // if null, treat as not independently bookable unless you explicitly create independent row

  eventSponsorships EventSponsorship[]

  @@map("sponsorshiptype")
}

model EventSponsorship {
  id Int @id @default(autoincrement())

  // Null = independent sponsorship (not tied to any event)
  eventId Int?
  event   Event? @relation(fields: [eventId], references: [id], onDelete: SetNull)

  sponsorshipTypeId Int
  sponsorshipType   SponsorshipType @relation(fields: [sponsorshipTypeId], references: [id])

  // Per-assignment price (defaults to type.price when created)
  price    Float
  // How many sponsors can buy this assignment
  maxSlots Int   @default(1)

  bookings SponsorshipBooking[]

  // One row per (eventId, type) pair. Multiple NULLs allowed by SQL; enforce ‚Äúone independent per type‚Äù in service.
  @@unique([eventId, sponsorshipTypeId])
  @@index([eventId])
  @@index([sponsorshipTypeId])
  @@map("eventsponsorship")
}

model SponsorshipBooking {
  id     Int   @id @default(autoincrement())
  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  eventSponsorship   EventSponsorship @relation(fields: [eventSponsorshipId], references: [id])
  eventSponsorshipId Int

  status       String @default("pending") // pending, confirmed, failed
  sponsorName  String
  sponsorEmail String
  sponsorPhone String

  // ‚úÖ unify logo as media (replaces old sponsorLogo string)
  logoMediaId Int?
  logoMedia   MediaAsset? @relation("SponsorshipLogoMedia", fields: [logoMediaId], references: [id])

  bookedAt DateTime @default(now())

  @@map("sponsorshipbooking")
}

model EventOccurrence {
  id Int @id @default(autoincrement())

  // üîó Parent template
  eventId Int
  event   Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  occurrenceDate DateTime

  startAt DateTime
  endAt   DateTime

  capacity    Int
  bookedCount Int @default(0)

  // Optional per-day overrides
  capacityOverride Int?
  priceOverride    Float?

  // Admin controls
  isCancelled Boolean @default(false)

  // Bookings for this date
  bookings EventBooking[]

  @@unique([eventId, occurrenceDate])
  @@index([eventId])
  @@index([occurrenceDate])
  @@map("eventoccurrence")
}

model Settings {
  id Int @id @default(1)

  currency String @default("USD")
  timezone String @default("America/New_York")

  travelRate      Float
  travelUnit      String @default("mile")
  freeTravelUnits Float
  maxServiceUnits Float
  travelAvgSpeed  Float  @default(25)

  // ‚úÖ many-to-one relation (CORRECT)
  primaryVenueId Int?
  primaryVenue   Venue? @relation(fields: [primaryVenueId], references: [id])

  updatedAt DateTime @updatedAt

  @@map("settings")
}


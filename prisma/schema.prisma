model PoojaMedia {
  id      Int   @id @default(autoincrement())
  pooja   Pooja @relation(fields: [poojaId], references: [id], onDelete: Cascade)
  poojaId Int

  media   MediaAsset @relation("PoojaGalleryMedia", fields: [mediaId], references: [id], onDelete: Cascade)
